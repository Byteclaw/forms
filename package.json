{
  "name": "@byteclaw/forms",
  "description": "Easily built forms in React using Hooks API",
  "version": "1.0.0-alpha.4",
  "license": "MIT",
  "keywords": [
    "form",
    "forms",
    "react",
    "react-dom",
    "validation",
    "hooks"
  ],
  "bugs": {
    "url": "https://github.com/byteclaw/forms/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/byteclaw/forms.git"
  },
  "contributors": [
    {
      "name": "Michal Kvasničák",
      "url": "https://github.com/michalkvasnicak"
    },
    {
      "name": "Juraj Hríb",
      "url": "https://github.com/jurajhrib"
    }
  ],
  "unpkg": "dist/index.umd.js",
  "main": "dist/index.js",
  "jsnext:main": "dist/index.modern.mjs",
  "module": "dist/index.modern.mjs",
  "types": "dist/index.d.js",
  "files": [
    "dist",
    "src",
    "!__tests__"
  ],
  "dependencies": {
    "@types/react": "^16.8.23",
    "@types/yup": "^0.26.22"
  },
  "sideEffects": false,
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/plugin-transform-runtime": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@testing-library/react": "^8.0.6",
    "@types/jest": "^24.0.15",
    "@types/react": "^16.8.23",
    "@typescript-eslint/parser": "^1.13.0",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "all-contributors-cli": "^6.8.1",
    "bundlesize": "^0.18.0",
    "eslint": "^6.1.0",
    "eslint-config-airbnb-typescript": "^4.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^1.6.1",
    "husky": "^3.0.1",
    "jest": "^24.8.0",
    "lint-staged": "^9.2.1",
    "microbundle": "next",
    "prettier": "^1.18.2",
    "promise": "^8.0.3",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "release-it": "^12.3.4",
    "rimraf": "^2.6.3",
    "typescript": "^3.5.3",
    "use-debounce": "^2.2.0",
    "yup": "^0.27.0"
  },
  "peerDependencies": {
    "react": ">=16.8.3",
    "yup": ">=0.26.10 <1.0.0"
  },
  "scripts": {
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "build": "microbundle --jsx React.createElement",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint --fix \"src/**/*.{ts,tsx}\"",
    "lint-staged": "lint-staged",
    "prebuild": "rimraf dist",
    "prepublishOnly": "npm run build",
    "precommit": "lint-staged",
    "size": "bundlesize",
    "test": "jest --watch",
    "test:ci": "jest --ci --coverage",
    "typecheck": "tsc --noEmit",
    "typecheck:all": "tsc --noEmit -p tsconfig.all.json"
  },
  "lint-staged": {
    "*.json": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "bundlesize": [
    {
      "path": "./dist/index.js",
      "maxSize": "4kB"
    },
    {
      "path": "./dist/index.modern.mjs",
      "maxSize": "4kB"
    },
    {
      "path": "./dist/index.umd.js",
      "maxSize": "4kB"
    }
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  }
}
