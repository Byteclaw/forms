{
  "name": "@napred/forms",
  "description": "Easily built forms in React using Hooks API",
  "version": "0.5.4",
  "license": "MIT",
  "keywords": [
    "form",
    "forms",
    "react",
    "react-dom",
    "validation",
    "hooks"
  ],
  "bugs": {
    "url": "https://github.com/napred/forms/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/napred/forms.git"
  },
  "contributors": [
    {
      "name": "Michal Kvasničák",
      "url": "https://github.com/michalkvasnicak"
    },
    {
      "name": "Juraj Hríb",
      "url": "https://github.com/jurajhrib"
    }
  ],
  "main": "dist/forms.cjs.js",
  "jsnext:main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.js",
  "files": [
    "dist",
    "src",
    "!__tests__"
  ],
  "sideEffects": false,
  "dependencies": {
    "lodash.debounce": "^4.0.8"
  },
  "devDependencies": {
    "@types/jest": "^23.3.9",
    "@types/lodash.debounce": "^4.0.4",
    "@types/react": "^16.7.17",
    "@types/yup": "^0.26.2",
    "all-contributors-cli": "^5.4.1",
    "bundlesize": "^0.17.0",
    "husky": "^1.1.3",
    "jest": "^23.6.0",
    "lint-staged": "^8.0.4",
    "prettier": "^1.14.3",
    "react": "^16.7.0-alpha.2",
    "react-dom": "^16.7.0-alpha.2",
    "react-testing-library": "^5.2.3",
    "release-it": "^8.0.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.67.3",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-replace": "^2.1.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-terser": "^3.0.0",
    "ts-jest": "^23.10.5",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.16.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.1.6",
    "yup": "^0.26.6"
  },
  "peerDependencies": {
    "react": ">=16.7.0-alpha.2 || >=16.7.0",
    "yup": ">=0.26.6 <1.0.0"
  },
  "scripts": {
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "build": "tsc && rollup -c",
    "lint": "tslint -p .",
    "lint-staged": "lint-staged",
    "prebuild": "rimraf dist",
    "prepublishOnly": "npm run build",
    "precommit": "lint-staged",
    "size": "bundlesize",
    "test": "jest --watch --coverage",
    "test:ci": "jest --ci --coverage",
    "typecheck": "tsc --noEmit"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "tslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "bundlesize": [
    {
      "path": "./dist/forms.cjs.js",
      "maxSize": "8kB"
    },
    {
      "path": "./dist/forms.umd.min.js",
      "maxSize": "30kB"
    }
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  }
}
