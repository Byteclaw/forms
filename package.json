{
  "name": "@napred/forms",
  "version": "0.4.1",
  "license": "MIT",
  "keywords": [
    "form",
    "forms",
    "react",
    "react-dom",
    "validation",
    "hooks"
  ],
  "bugs": {
    "url": "https://github.com/napred/forms/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/napred/forms.git"
  },
  "contributors": [
    {
      "name": "Michal Kvasničák",
      "url": "https://github.com/michalkvasnicak"
    },
    {
      "name": "Juraj Hríb",
      "url": "https://github.com/jurajhrib"
    }
  ],
  "main": "dist/forms.cjs.js",
  "jsnext:main": "dist/forms.esm.js",
  "module": "dist/forms.esm.js",
  "files": [
    "dist",
    "src",
    "!__tests__"
  ],
  "sideEffects": false,
  "dependencies": {
    "lodash.debounce": "^4.0.8"
  },
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.1.6",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "all-contributors-cli": "^5.4.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "bundlesize": "^0.17.0",
    "cross-env": "^5.2.0",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.6.0",
    "eslint": "^5.8.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-flowtype": "^3.2.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^21.26.2",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.1",
    "flow-bin": "^0.85.0",
    "husky": "^1.1.3",
    "jest": "^23.6.0",
    "lint-staged": "^8.0.4",
    "prettier": "^1.14.3",
    "react": "^16.7.0-alpha.2",
    "react-dom": "^16.7.0-alpha.2",
    "react-testing-library": "^5.2.3",
    "release-it": "^8.0.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.67.3",
    "rollup-plugin-babel": "^4.0.3",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-flow": "^1.1.1",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-replace": "^2.1.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-terser": "^3.0.0",
    "yup": "^0.26.6"
  },
  "peerDependencies": {
    "react": ">=16.7.0-alpha || >=16.7.0",
    "yup": ">=0.26.6 <1.0.0"
  },
  "scripts": {
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "gen-flow-cjs": "echo \"// @flow\nexport * from '../src/index.js';\" > ./dist/forms.cjs.js.flow",
    "gen-flow-esm": "echo \"// @flow\nexport * from '../src/index.js';\" > ./dist/forms.esm.js.flow",
    "build": "rollup -c && npm run gen-flow-cjs && npm run gen-flow-esm",
    "flow": "flow check",
    "lint": "eslint src",
    "lint-staged": "lint-staged",
    "prebuild": "rimraf dist",
    "prepublishOnly": "npm run build",
    "precommit": "lint-staged",
    "size": "bundlesize",
    "test": "jest --watch --coverage",
    "test:ci": "jest --ci --coverage"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "flow check && lint-staged"
    }
  },
  "bundlesize": [
    {
      "path": "./dist/forms.cjs.js",
      "maxSize": "8kB"
    },
    {
      "path": "./dist/forms.esm.js",
      "maxSize": "8kB"
    },
    {
      "path": "./dist/forms.umd.min.js",
      "maxSize": "30kB"
    }
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  }
}
