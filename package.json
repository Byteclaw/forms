{
  "name": "@byteclaw/forms",
  "description": "Easily built forms in React using Hooks API",
  "version": "0.8.0",
  "license": "MIT",
  "keywords": [
    "form",
    "forms",
    "react",
    "react-dom",
    "validation",
    "hooks"
  ],
  "bugs": {
    "url": "https://github.com/byteclaw/forms/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/byteclaw/forms.git"
  },
  "contributors": [
    {
      "name": "Michal Kvasničák",
      "url": "https://github.com/michalkvasnicak"
    },
    {
      "name": "Juraj Hríb",
      "url": "https://github.com/jurajhrib"
    }
  ],
  "main": "dist/forms.cjs.js",
  "jsnext:main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.js",
  "files": [
    "dist",
    "src",
    "!__tests__"
  ],
  "sideEffects": false,
  "dependencies": {
    "lodash.debounce": "^4.0.8"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "@types/jest": "^24.0.4",
    "@types/lodash.debounce": "^4.0.4",
    "@types/react": "^16.8.5",
    "@types/yup": "^0.26.9",
    "@typescript-eslint/parser": "^1.3.0",
    "all-contributors-cli": "^5.4.1",
    "bundlesize": "^0.17.0",
    "eslint": "^5.13.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-react-hooks": "^1.0.2",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "lint-staged": "^8.1.4",
    "prettier": "^1.16.4",
    "promise": "^8.0.2",
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
    "react-testing-library": "^6.0.0",
    "release-it": "^8.0.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.67.3",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-replace": "^2.1.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-terser": "^3.0.0",
    "typescript": "^3.3.3",
    "yup": "^0.26.10"
  },
  "peerDependencies": {
    "react": ">=16.8.3",
    "yup": ">=0.26.10 <1.0.0"
  },
  "scripts": {
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "build": "tsc && rollup -c",
    "lint": "eslint src/**/*.{ts,tsx}",
    "lint-staged": "lint-staged",
    "prebuild": "rimraf dist",
    "prepublishOnly": "npm run build",
    "precommit": "lint-staged",
    "size": "bundlesize",
    "test": "jest --watch",
    "test:ci": "jest --ci --coverage",
    "typecheck": "tsc --noEmit",
    "typecheck:all": "tsc --noEmit -p tsconfig.all.json"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "bundlesize": [
    {
      "path": "./dist/forms.cjs.js",
      "maxSize": "8kB"
    },
    {
      "path": "./dist/forms.umd.min.js",
      "maxSize": "30kB"
    }
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  }
}
